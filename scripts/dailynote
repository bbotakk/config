#! /usr/bin/env nu

# Creates a daily note, if it doesnt exist yet, based on a template. Used for journaling, goalstracking etc...
def main [] {
    let daily_notes = "~/Notes/daily_notes"
    let today_title = (date now | date format "%Y-%m-%d.md")
    let todays_note = ($daily_notes | path join $today_title)
    let daily_template = "~/Notes/templates/daily_template.md"

    if not ($todays_note | path exists) {
        cp $daily_template $todays_note
        $"alacritty --title "daily note" -e nvim ($todays_note) &" | bash
    } else {
        print "Daily note already exists!"
        exit 1
    }
   daily_note
}

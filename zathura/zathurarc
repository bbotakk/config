# options
set sandbox none
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
set selection-clipboard clipboard
set window-title-basename true
set statusbar-basename true
set font "Iosevka Nerd Font 8"
set adjust-open "width"
set window-title-page true
set recolor true
set render-loading true
set recolor-keephue true # keep original color

# mappings
# just use PgUp, PgDn for whole page scrolling
map u scroll half-up
map d scroll half-down
map C-u scroll half-up
map C-d scroll half-down
map w adjust_window width
map s toggle_page_mode
map r reload
map R rotate
map = zoom in
map - zoom out
map i recolor
map p print
map gg goto top

# solarized light
set notification-error-bg       "#eee8d5" # base2
